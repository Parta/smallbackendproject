{
   "root": {
      "src": "./src",
      "dist": "./dist"
   },
   "css": {
      "dev": "styles",
      "dist": "assets/css",
      "parts": "parts",
      "extensions": "*.+(css|scss)",
      "uncss": false
   },
   "js": {
      "dev": "js",
      "dist": "assets/js",
      "parts": "modules",
      "extensions": [".json", ".js"]
   },
   "img": {
      "dev": "img/**/",
      "dist": "assets/img",
      "extensions": "*.+(jpg|jpeg|gif|png|svg)"
   },
   "svg": {
      "dev": "img/svg",
      "dist": "assets/img"
   },
   "fonts": {
      "dev": "fonts",
      "dist": "assets/fonts",
      "extensions": "*.+(woff2|woff|eot|ttf|svg)"
   },
   "static": {
      "dev": "",
      "dist": ""
   },
   "browserSync": {
    "port": 3000,
    "proxy": {
      "target": "",
      "publicPath" : ""
    }
   }
}
